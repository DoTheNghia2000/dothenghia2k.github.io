<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html;charset=utf-8" />
    <meta name="description" content="">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="shortcut icon" href="images/favicon.png">
    <link href="~/assets/client/css/bootstrap.css" rel="stylesheet">
    <link href='http://fonts.googleapis.com/css?family=Roboto:400,300,300italic,400italic,500,700,500italic,100italic,100' rel='stylesheet' type='text/css'>
    <link href="~/assets/client/css/font-awesome.min.css" rel="stylesheet">
    <link rel="stylesheet" href="~/assets/client/css/flexslider.css" type="text/css" media="screen" />
    <link href="~/assets/client/css/style.css" rel="stylesheet">
</head>
<body>
    <div class="wrapper">
        <div class="header">
            <div class="container">
                <div class="row">
                    <div class="col-md-2 col-sm-2">
                        <div class="logo">
                            <a href="index.html">
                                <img src="~/assets/client/images/logo.png" alt="FlatShop">
                            </a>
                        </div>
                    </div>
                    <div class="col-md-10 col-sm-10">
                        <div class="header_top">
                            <div class="row">
                                <div class="col-md-3">
                                    
                                </div>
                                <div class="col-md-6">
                                    
                                </div>
                                <div class="col-md-3">
                                    <ul class="usermenu">
                                        @{var session = (dothenghia_shop.Common.UserLogin)Session[dothenghia_shop.Common.CommonConstants.USER_SESSION];}
                                        @if (session == null)
                                        {
                                            <li><a href="@Url.Action("Login", "LogAndReg")" class="log">Login</a></li>
                                            <li><a href="@Url.Action("Register", "LogAndReg")" class="reg">Register</a></li>
                                        }
                                        else
                                        {
                                            <li><a href="@Url.Action("Login", "LogAndReg")" class="log">Xin chao: @session.UserName</a></li>
                                            <li><a href="@Url.Action("Register", "LogAndReg")" class="reg">@Html.ActionLink("Thoat", "Logout", "LogAndReg")</a></li>
                                        }
                                    </ul>
                                </div>
                            </div>
                        </div>
                        <div class="clearfix">
                        </div>
                        <div class="header_bottom">
                            
                                        @RenderSection("Search", required: false)
                                   

                            <div class="navbar-collapse collapse">
                                <ul class="nav navbar-nav">
                                    <li>

                                        <a href="@Url.Action("Index","Home")">
                                            Home
                                        </a>
                                    </li>
                                    <li>
                                        <a href="@Url.Action("Index","Nike")">
                                            Nike
                                        </a>
                                    </li>
                                    <li>
                                        <a href="@Url.Action("Index","Adidas")">
                                            Adidas
                                        </a>
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="clearfix">
        </div>
        @RenderBody()
        <div class="clearfix">
        </div>
        <div class="footer">
            <div class="footer-info">
                <div class="container">
                    <div class="row">
                        <div class="col-md-3">
                            <div class="footer-logo">
                                <a href="#">
                                    <img src="images/logo.png" alt="">
                                </a>
                            </div>
                        </div>
                        <div class="col-md-3 col-sm-6">
                            <h4 class="title">
                                Contact
                                <strong>
                                    Info
                                </strong>
                            </h4>
                            <p>
                                No. 08, Nguyen Trai, Hanoi , Vietnam
                            </p>
                            <p>
                                Call Us : (084) 1900 1008
                            </p>
                            <p>
                                Email : michael@leebros.us
                            </p>
                        </div>
                        <div class="col-md-3 col-sm-6">
                            <h4 class="title">
                                Customer
                                <strong>
                                    Support
                                </strong>
                            </h4>
                            <ul class="support">
                                <li>
                                    <a href="#">
                                        FAQ
                                    </a>
                                </li>
                                <li>
                                    <a href="#">
                                        Payment Option
                                    </a>
                                </li>
                                <li>
                                    <a href="#">
                                        Booking Tips
                                    </a>
                                </li>
                                <li>
                                    <a href="#">
                                        Infomation
                                    </a>
                                </li>
                            </ul>
                        </div>
                        <div class="col-md-3">
                            <h4 class="title">
                                Get Our
